<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal1"
    android:padding="30dp"
    tools:context=".patientreg">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/patientlogofinal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/patient" />

        <EditText
            android:id="@+id/entername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/patientlogofinal"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aldrich"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/idnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/entername"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_123_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="Enter Your ID Number"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idnumber"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="PhoneNumber"
            android:inputType="phone"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phonenumber"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="Enter Your Email"
            android:inputType="textWebEmailAddress|textAutoComplete"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/Timings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="20dp"
            android:entries="@array/timeframes"
            android:fontFamily="@font/aldrich"
            android:hint="Timings"
            android:padding="15dp"
            android:popupBackground="#50ffffff"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/Specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:entries="@array/specialization"
            android:fontFamily="@font/aldrich"
            android:hint="Specialization"
            android:inputType="textCapSentences"
            android:padding="15dp"
            android:popupBackground="#50ffffff"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/Department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:entries="@array/departments"
            android:hint="Department"
            android:inputType="text"
            android:padding="15dp"
            android:popupBackground="#50ffffff"
            android:textColorHint="@color/black" />


        <EditText
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="Gender"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="Age"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_margin="10dp"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/aldrich"
            android:hint="Enter Your Password"
            android:inputType="numberPassword"
            android:padding="15dp"
            android:textColorHint="@color/black" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/regbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password1"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/aldrich"
            android:text="Register Now"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Piche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:clickable="true"
            android:fontFamily="@font/aldrich"
            android:onClick="Back"
            android:text="Login Page"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textStyle="bold" />



    </LinearLayout>

</ScrollView>